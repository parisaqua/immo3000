{% extends 'base.html.twig' %}

{% block title %}Modification du profile{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="mt-5 mb-4">Modification du profile</h1>

        {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-2">
                        {{ form_row(form.gender) }}
                    </div>
                    <div class="col-md-5">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-md-5">
                        {{ form_row(form.lastName) }}
                    </div>
                </div>
                <div class="row">
                     <div class="col-md-12">
                        {{ form_row(form.email) }}
                    </div>
                </div>

        <button class="btn btn-center btn-success"> <i class="fas fa-user-check"></i>&nbsp;&nbsp;Enregistrer les modifications</button>

        {{ form_end(form) }}

    </div>





    

{% endblock %} 
