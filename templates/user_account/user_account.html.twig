{% extends 'base.html.twig' %}

{% block title %}Modification du profile{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="mt-5 mb-4"><i class="fas fa-user-cog"></i>&nbsp;&nbsp;Modification du profile</h1>
        <div class="row">
            <div class="col-md-2">
                {# {% if app.user.Avatar %}
                    <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb_360') }}" alt="" class="card-img-top">
                {% else %} #}
                    {% if app.user.gender == 0 %}
                        <img src="{{ '/images/default/avatarH.png' | imagine_filter('thumb_avatar') }}" alt="Image" class="avatar">
                    {% else %}
                        <img src="{{ '/images/default/avatarF.png' | imagine_filter('thumb_avatar') }}" alt="Image" class="avatar">
                    {% endif %}
                {# {% endif %} #}
                <div class="row">
                    <a href="#" class="btn btn-info btn-center"><i class="fas fa-camera"></i>&nbsp;&nbsp;Modifier...</a>
                </div>
               
            </div>
            <div class="col-md-10">
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-2">
                                    {{ form_row(form.gender) }}
                                </div>
                                <div class="col-md-5">
                                    {{ form_row(form.firstName) }}
                                </div>
                                <div class="col-md-5">
                                    {{ form_row(form.lastName) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    {{ form_row(form.email) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    {{ form_row(form.description) }}
                                </div>
                            </div>
                            <div class="row pt-4 align-items-center ">
                                <div class="col-md-2"></div>
                                <div class="col-md-3 center-block">
                                    <button class="btn btn-center btn-success"> <i class="fas fa-check"></i>&nbsp;&nbsp;Enregistrer les modifications</button>
                                </div>
                                <div class="col-md-2"></div>
                                <div class="col-md-3 center-block">
                                    <a href="{{ path('user_account_show') }}" class="btn btn-info "><i class="fas fa-user"></i>&nbsp;&nbsp;Revenir Ã  mon profile</a>
                                </div>
                                <div class="col-md-2"></div>
                            </div>
                    {{ form_end(form) }}

            </div>
        
        </div>

    </div>





    

{% endblock %} 
