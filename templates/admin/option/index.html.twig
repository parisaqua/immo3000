{% extends 'base.html.twig' %}

{% block title %}Administration des options{% endblock %}

{% block header %}
<h2>Administration des options</h2>
{% endblock %}

{% block body %}

<div class="container mt-4">

    <div class="row align-items-center">
        <div class="col-md-9"> <h1 class="">Administration des Options</h1></div>
        <div class="col-md-3"><a href="{{ path('admin_option_new') }}" class="btn btn-success"><li class="fa fa-plus-circle"></li>&nbsp;Ajouter une option</a></div>
    </div>
   <table class="table table-striped">
    <thead>
        <tr class="text-center">
            <th>Nom</th>
            <th>Actions</th>
        </tr>

    </thead>
    <tbody>
    {% for option in options %}
        <tr>
            <td>{{ option.name }}</td>
            <td class="text-center">
                <a href="{{ path('admin_option_edit', {id:option.id}) }}" class="btn btn-info">Editer</a> 
                <form method="post" action="{{ path('admin_option_delete', {id: option.id}) }}" style="display: inline-block;" onsubmit="return confirm('Etes-vous certain ?')">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ option.id )}}">
                    <button class="btn btn-danger">Supprimer</button>
                </form>
            </td>
        </tr>
    {% endfor %}
    </tbody>
   
   </table>

    {# display navigation #}
    {# <div class="pagination">
        {{ knp_pagination_render(options) }}
     </div> #}
  
   

</div>


</div>
{% endblock %}