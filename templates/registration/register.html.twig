{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    
    <h1 class="mt-4 mb-3">S'incrire</h1>

    {{ form_start(registrationForm) }}
        <div class="row">
            <div class="col-md-2">
                {{ form_row(registrationForm.gender) }}
            </div>
            <div class="col-md-5">
                {{ form_row(registrationForm.firstName) }}
            </div>
            <div class="col-md-5">
                {{ form_row(registrationForm.lastName) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(registrationForm.email) }}
            </div>
            <div class="col-md-6">
                {{ form_row(registrationForm.plainPassword) }}
            </div>
        </div>
        <div class="mt-2 mb-2">
                {{ form_row(registrationForm.agreeTerms) }}
        </div>
            
      
       
        <button class="btn btn-center btn-success"> <i class="fas fa-user-check"></i>&nbsp;&nbsp;S'inscrire</button>
    {{ form_end(registrationForm) }}

</div>

{% endblock %}
