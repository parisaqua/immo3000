{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    
    <h1 class="mt-2">S'incrire</h1>

    {{ form_start(registrationForm) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(registrationForm.firstName) }}
            </div>
            <div class="col-md-6">
                {{ form_row(registrationForm.lastName) }}
            </div>
        </div>
            {{ form_row(registrationForm.email) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(registrationForm.plainPassword) }}
            </div>
            <div class="col-md-6">
                Confirmation
            </div>
        </div>
            {{ form_row(registrationForm.agreeTerms) }}
      
       
        <button class="btn btn-center btn-success"> <i class="fas fa-user-check"></i>&nbsp;&nbsp;S'inscrire</button>
    {{ form_end(registrationForm) }}

</div>

{% endblock %}
